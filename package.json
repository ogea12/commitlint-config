{
  "name": "@ogea12/commitlint-config",
  "description": "Config' CommitLint appliquÃ©e dans les projets de l'OGEA 12",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.17.0"
  },
  "type": "module",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js",
      "require": "./build/index.cjs"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run format && npm run lint:fix",
    "build": "tsup",
    "postbuild": "del-cli build/**/*.d.cts",
    "prepublishOnly": "npm run build",
    "release": "npx release-it",
    "taze": "npx taze -I"
  },
  "homepage": "https://github.com/ogea12/commitlint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ogea12/commitlint-config.git"
  },
  "devDependencies": {
    "@ogea12/eslint-config": "^2.0.2",
    "@ogea12/prettier-config": "^1.0.4",
    "@ogea12/tsconfig": "^1.0.4",
    "@types/node": "^22.15.3",
    "del-cli": "^6.0.0",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "release-it": "^19.0.1",
    "taze": "^19.0.4",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/types": "^19.8.0"
  },
  "peerDependencies": {
    "@commitlint/cli": "^19.8.0"
  },
  "author": "OGEA 12",
  "license": "MIT",
  "keywords": [
    "ogea12",
    "commitlint"
  ],
  "prettier": "@ogea12/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  }
}
